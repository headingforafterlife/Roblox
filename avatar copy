local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local ModifyUsername_upvr = ReplicatedStorage:WaitForChild("ModifyUsername")

local player = Players.LocalPlayer
local humanoidDescriptionBackup = nil -- Store player's avatar appearance

-- Function to Save the Avatar Before Reset
local function saveAvatar()
    if player.Character then
        local humanoid = player.Character:FindFirstChild("Humanoid")
        if humanoid then
            humanoidDescriptionBackup = humanoid:GetAppliedDescription() -- Backup avatar
        end
    end
end

-- Function to Restore the Avatar After Reset (with slight delay)
local function restoreAvatar()
    if humanoidDescriptionBackup then
        player.CharacterAppearanceLoaded:Wait() -- Wait until character is fully loaded
        local humanoid = player.Character and player.Character:FindFirstChild("Humanoid")
        if humanoid then
            humanoid:ApplyDescription(humanoidDescriptionBackup) -- Reapply avatar
        end
    end
end

-- Function to Create the GUI (Menu)
local function createGUI()
    -- Prevent multiple GUIs from appearing
    if player:FindFirstChild("PlayerGui"):FindFirstChild("UsernameGui") then return end

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "UsernameGui"
    screenGui.ResetOnSpawn = false -- Prevents GUI from disappearing after respawn
    screenGui.Parent = player:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 200, 0, 100)
    frame.Position = UDim2.new(0.5, -100, 0.5, -50)
    frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    frame.BorderSizePixel = 2
    frame.Draggable = true
    frame.Active = true
    frame.Parent = screenGui

    local textBox = Instance.new("TextBox")
    textBox.Size = UDim2.new(1, -20, 0, 30)
    textBox.Position = UDim2.new(0, 10, 0, 10)
    textBox.PlaceholderText = "Enter Username"
    textBox.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    textBox.Parent = frame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -20, 0, 30)
    button.Position = UDim2.new(0, 10, 0, 50)
    button.Text = "Modify Username"
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = frame

    -- Restore last username if available
    local lastModifiedUsername = player:GetAttribute("LastUsername")
    if lastModifiedUsername then
        textBox.Text = lastModifiedUsername
    end

    button.MouseButton1Click:Connect(function()
        local Text = textBox.Text
        if Text and Text ~= "" then
            player:SetAttribute("LastUsername", Text) -- Save username persistently
            ModifyUsername_upvr:FireServer(Text)
        end
    end)
end

-- Save Avatar Before Reset
player.CharacterRemoving:Connect(saveAvatar)

-- Restore Avatar and GUI After Respawn
player.CharacterAdded:Connect(function()
    createGUI() -- Recreate GUI instantly
    task.spawn(restoreAvatar) -- Reapply avatar slightly after respawn
end)

-- Create GUI initially
createGUI()
